@{
    ViewData["Title"] = "Details";
}

@section myScripts{
    <script src="/js/dashboard.js" defer></script>
}
<div>
    <div class="header text-center">
        <h1>@ViewBag.deviceName Details</h1>
    </div>
    <div class="container">
        <div class="col-sm">
           
           <table>
            <tr>
                <th>Device Name: </th>
                <td>@ViewBag.deviceName</td>
            </tr>

            <tr>
                <th> Device id</th>
                <td>@ViewBag.deviceId</td>
            </tr>

            <tr>
                <th>Device groep: </th>
                <td>@ViewBag.deviceGroup</td>
            </tr>

            <tr>
                <th>Device Uuid: </th>
                <td>@ViewBag.deviceUuid</td>
            </tr>

            <tr>
                <th>Device aanmelding: </th>
                <td>@ViewBag.deviceDate</td>
            </tr>

            <tr>
                <th>Sensors</th>
            @for (int i = 0; i < ViewBag.deviceSensors.Count; i++)
            {
                <td>@ViewBag.deviceSensors[i]</td>
            }
            </tr>

           </table>

        </div>

</div>
