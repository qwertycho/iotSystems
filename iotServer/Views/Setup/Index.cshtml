@{
    ViewData["Title"] = "Setup";
}

<div class="text-center">
    <h1 class="display-4">Setup</h1>
    <p>Hier staan de verschillende instellingen.</p>

    <p>SetupID: @ViewData["id"]</p>

    <form method="POST" action="/Setup/Save">

        @Html.AntiForgeryToken()

        <input type="hidden" name="id" value="@ViewData["id"]" />
        <input type="hidden" name="deviceID" value="@ViewData["deviceID"]" />
        <label>MaxTemp: </label><input type="number" name="maxTemp" value="@ViewData["maxTemp"]" />
        <label>minTemp: </label><input type="number" name="minTemp" value="@ViewData["minTemp"]" />
        <label>aanTijd: </label><input type="number" name="aanTijd" value="@ViewData["aanTijd"]" />
        <label>uitTijd: </label><input type="number" name="uitTijd" value="@ViewData["uitTijd"]" />
        <input type="submit" value="Opslaan" />
    </form>

</div>
